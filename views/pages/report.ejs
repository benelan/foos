<!-- views/pages/report.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
<div class="row">
    <div class="col-sm-8">    
        <div class="jumbotron" style="min-height: 460px">
		<h2>Compete? Count it <span class="glyphicon glyphicon-sunglasses"></span></h2>
		<form method="POST" action="/submit-game" id="sg">
		<table class="table">
			<thead>
				<tr>
				<th scope="col">Team</th>
				<th scope="col">Player 1 </th>
				<th scope="col">Player 2</th>
				<th scope="col">Wins</th>
				</tr>
			</thead>
			<tbody>
				<tr>
				<td scope="row">1</td>
				<td>
				<select class="form-control" id="name1" name="name1">
				<option disabled selected >Name</option>
				<% for (var i = 0; i < data.length; i++) { const id = data[i].id %>
                <option><%= data[i].name %></option>
        		<% } %>
				</td>
				<td>
				<select class="form-control" id="name2" name="name2">
				<option>Name</option>
				<% for (var i = 0; i < data.length; i++) { %>
                <option><%= data[i].name %></option>
        		<% } %>
				</td>
				<td><select class="form-control" id="wins1" name="wins1">
						<option>0</option>
						<option>1</option>
						<option>2</option>
						<option>3</option>
						<option>4</option>
						<option>5</option>
  					</select>
				</td>
				</tr>
				<tr>
				<td scope="row">2</td>
				<td>
				<select class="form-control" id="name3" name="name3">
				<option>Name</option>
				<% for (var i = 0; i < data.length; i++) { %>
                <option><%= data[i].name %></option>
        		<% } %>
				</td>
				<td>
				<select class="form-control" id="name4" name="name4">
				<option>Name</option>
				<% for (var i = 0; i < data.length; i++) { %>
                <option><%= data[i].name %></option>
        		<% } %>
				</td>
				<td><select class="form-control" id="wins3" name="wins2">
						<option>0</option>
						<option>1</option>
						<option>2</option>
						<option>3</option>
						<option>4</option>
						<option>5</option>
  					</select>
				</td>
				</tr>
			</tbody>
			</table>
				<button type="submit" id="gameSub" onclick="clearGame()" class="btn btn-light">Submit</button>
				<span class="glyphicon glyphicon-hand-left">Honor-System</span>
				<span class="glyphicon glyphicon-thumbs-up"></span>
            </form>
		<br><br>
		<h4>Add Player</h4>
                <form method="POST" action="/submit-play" id ='ss'>
                <div class="form-group">
					<input type="text" class="form-control" name= "play" id="play" placeholder="First Name Last Initial">
				</div>
					<button id="playSub" type="submit" onclick="clearPlay()" class="btn btn-light">Submit</button>
				</form>
		
		</div>
    </div>

    <div class="col-sm-4">        
        <div class="jumbotron" style="min-height: 460px">
            <h3>Suggestions</h3>
                <form method="POST" action="/submit-suggest" id ='ss'>
                
                <div class="form-group">
					<input type="text" class="form-control" name= "trashy" id="trashy" placeholder="Name">
				</div>
                
				<div class="form-group">
    				<textarea class="form-control" name="trash" id="trash" rows="7" placeholder="Brilliant ideas"></textarea>
 					 </div>
					  <button id="sugSub" type="submit" onclick="clearSug()" class="btn btn-light">Submit</button>
				</form>
        </div>
    </div>

</div>
</main>
<script>
// clears the form after submitting
</script>
<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>